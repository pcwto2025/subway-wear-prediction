# Copy this file to .env and update with your values

# Application Settings
APP_NAME="Subway Wear Prediction System"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="postgresql+asyncpg://subway_user:subway_pass@localhost:5432/subway_wear_db"
DATABASE_ECHO=False
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
POSTGRES_USER="subway_user"
POSTGRES_PASSWORD="subway_pass"
POSTGRES_DB="subway_wear_db"
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432

# Redis (Optional - uncomment when using)
# REDIS_URL="redis://localhost:6379/0"
# REDIS_PASSWORD=""
# REDIS_CACHE_TTL=3600

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIRECTORY="./uploads"

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL="INFO"
LOG_FILE="app.log"

# ML Model
MODEL_PATH="./app/ml/models"
MODEL_VERSION="v1.0"
PREDICTION_CONFIDENCE_THRESHOLD=0.85

# Email (Optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@subway-wear.com"

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60